@using AutoOA.Repository.Dto.ColorDto

@model VehicleColorReadDto

@{
    Layout = "~/Views/Shared/_NiceLayout.cshtml";
}

<div class="float-end">
    <a href="/color/index" class="btn btn-outline-dark">Повернутися до списку</a>
</div>
<h1>Редагування</h1>
<hr />

<div class="row">
    <form asp-action="Edit" class="col-md-4">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="ColorName" class="form-label"></label>
            <input asp-for="ColorName" class="form-control" />
            <span asp-validation-for="ColorName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Зберегти</button>
        </div>
    </form>
</div>

@section Scripts {

    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {
            $(".form-select").select2();
        });
    </script>
 }
